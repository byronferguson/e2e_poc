{
  "name": "nest-template",
  "version": "1.0.0",
  "description": "NestJS Template for Big Blue Swim School",
  "author": "",
  "license": "ISC",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "prestart:dev": "docker-compose up -d dev-db",
    "start:dev": "nest start --watch",
    "poststart:dev": "docker-compose stop dev-db && docker-compose rm -f dev-db",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "pretest:e2e": "docker-compose up -d test-db",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "posttest:e2e": "docker-compose stop test-db && docker-compose rm -f test-db",
    "nest:create": "npm run nest:create:module && npm run nest:create:controller && npm run nest:create:service",
    "nest:create:module": "nest g mo $npm_config_name modules",
    "nest:create:controller": "nest g co $npm_config_name modules",
    "nest:create:service": "nest g s $npm_config_name modules",
    "pretypeorm": "(rm ormconfig.json || :) && ts-node -r tsconfig-paths/register src/scripts/write-type-orm-config.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:migration:generate": "yarn typeorm migration:generate -n",
    "typeorm:migration:create": "yarn typeorm migration:create -n",
    "typeorm:migration:run": "yarn typeorm migration:run",
    "typeorm:migration:revert": "yarn typeorm migration:revert"
  },
  "dependencies": {
    "@bigblueswimschool/elastic-apm-nest": "~1.1.2",
    "@bigblueswimschool/nest-health-plugin": "~1.0.1",
    "@bigblueswimschool/nest-info-plugin": "~1.0.2",
    "@elastic/elasticsearch": "~7.6.1",
    "@nestjs/common": "^7.0.9",
    "@nestjs/config": "~0.4.1",
    "@nestjs/core": "^7.0.9",
    "@nestjs/elasticsearch": "~7.1.0",
    "@nestjs/microservices": "^7.0.9",
    "@nestjs/platform-express": "^7.0.9",
    "@nestjs/swagger": "~4.5.5",
    "@nestjs/terminus": "~7.0.1",
    "@nestjs/typeorm": "~7.0.0",
    "@nestjsx/crud": "~4.6.1",
    "@nestjsx/crud-typeorm": "~4.6.1",
    "class-transformer": "~0.2.3",
    "class-validator": "~0.12.2",
    "date-fns": "~2.13.0",
    "dotenv": "^8.2.0",
    "express": "4.17.1",
    "global": "~4.4.0",
    "helmet": "~3.22.0",
    "nest-router": "~1.0.9",
    "passport-jwt": "~4.0.0",
    "pg": "~8.1.0",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^2.1.3",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.5",
    "swagger-ui-express": "~4.1.4",
    "tslib": "^1 <1.12.0 || ^1.13.0",
    "typeorm": "~0.2.24"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.1.5",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.9",
    "@nestjsplus/dyn-schematics": "~1.0.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.13",
    "@types/superagent": "^4.1.15",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "7.7.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^25.5.4",
    "prettier": "^2.0.5",
    "prettier-plugin-organize-imports": "~1.0.3",
    "prettier-ts": "^1.17.1-2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.5.1",
    "ts-loader": "^7.0.3",
    "ts-node": "^8.10.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "^~/config/(.*)$": "<rootDir>/config/$1",
      "^~/constants/(.*)$": "<rootDir>/constants/$1",
      "^~/decorators/(.*)$": "<rootDir>/decorators/$1",
      "^~/entities/(.*)$": "<rootDir>/entities/$1",
      "^~/guards/(.*)$": "<rootDir>/guards/$1",
      "^~/interceptors/(.*)$": "<rootDir>/interceptors/$1",
      "^~/modules/(.*)$": "<rootDir>/modules/$1",
      "^~/pipes/(.*)$": "<rootDir>/pipes/$1",
      "^~/utils/(.*)$": "<rootDir>/utils/$1",
      "^~/(.*)$": "<rootDir>/$1"
    },
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
